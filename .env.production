# Production Environment Variables for EMRNext

# Database Configuration
DATABASE_URL=${RAILWAY_DATABASE_URL}
DATABASE_NAME=emrnext
DATABASE_USER=emrnext_user

# ASP.NET Core Settings
ASPNETCORE_ENVIRONMENT=Production
ASPNETCORE_URLS=http://+:5000

# JWT Configuration
JWT_SECRET=${RAILWAY_JWT_SECRET}
JWT_ISSUER=EMRNext
JWT_AUDIENCE=EMRNextUsers

# Frontend Configuration
REACT_APP_API_BASE_URL=/api
REACT_APP_ENVIRONMENT=production

# Logging
LOGGING_LEVEL=Warning

# Feature Flags
ENABLE_ADVANCED_SCHEDULING=true
ENABLE_TELEMEDICINE=true
