# Database Configuration
EMRNEXT_DB_PROVIDER=SqlServer
EMRNEXT_DB_HOST=localhost
EMRNEXT_DB_PORT=1433
EMRNEXT_DB_NAME=EMRNextDb
EMRNEXT_DB_USER=sa
EMRNEXT_DB_PASSWORD=

# JWT Configuration
EMRNEXT_JWT_SECRET_KEY=
EMRNEXT_JWT_ISSUER=EMRNext.API
EMRNEXT_JWT_AUDIENCE=EMRNext.Client
EMRNEXT_JWT_EXPIRY_MINUTES=60
EMRNEXT_JWT_REFRESH_TOKEN_DAYS=7

# Azure Key Vault
EMRNEXT_KEYVAULT_URI=
AZURE_TENANT_ID=
AZURE_CLIENT_ID=
AZURE_CLIENT_SECRET=

# Application Settings
EMRNEXT_ENVIRONMENT=Development
EMRNEXT_API_URL=http://localhost:5000
EMRNEXT_CLIENT_URL=http://localhost:3000
EMRNEXT_CORS_ORIGINS=http://localhost:3000,https://localhost:3000

# Logging
EMRNEXT_LOG_LEVEL=Information
EMRNEXT_ENABLE_SENSITIVE_DATA_LOGGING=false
EMRNEXT_ENABLE_DETAILED_ERRORS=false

# Health Check
EMRNEXT_HEALTH_CHECK_PATH=/health
EMRNEXT_HEALTH_CHECK_PORT=5001
